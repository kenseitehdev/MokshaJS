
{
    "source": {
        "include": ["src"], // Path to your source code
        "includePattern": ".+\\.js(doc|x)?$", // File patterns to include
        "exclude": ["node_modules", "docs"], // Folders to exclude
        "baseUrl": "./" // Base URL for links
    },
    "opts": {
        "destination": "./docs", // Output directory for generated documentation
        "recurse": true // Recursively include subdirectories
    },
    "plugins": ["node_modules/jsdoc/plugins/markdown"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
